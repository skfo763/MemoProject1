<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/myColor">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/note"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나만의 노트필기"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginBottom="6dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="개인확인 절차 진행중입니다." />

    <LinearLayout
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/loginactivity_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="#ffb700"
            android:padding="12dp"
            android:hint="이름을 입력해주세요"
            android:textColorHint="#ffffff"
            android:drawableStart="@drawable/ic_person_black_24dp"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:drawablePadding="10dp"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:inputType="textPassword"
            android:layout_marginTop="10dp"
            android:id="@+id/loginactivity_pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="#ffb700"
            android:padding="12dp"
            android:hint="비밀번호를 입력해주세요"
            android:textColorHint="#ffffff"
            android:drawableStart="@drawable/ic_lock_black_24dp"
            android:drawableLeft="@drawable/ic_lock_black_24dp"
            android:drawablePadding="12dp"/>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/loginactivity_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffb700"
                android:text="로그인"
                android:textColor="#ffffff"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/loginactivity_maker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffb700"
                android:text="제작자 확인"
                android:textColor="#ffffff"
                android:layout_weight="1"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="This application software is developed \nonly for Changyeon's phone."
                android:textSize="12dp"
                android:layout_above="@+id/text"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/text"
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="3dp"
                android:text="Version 1.0.0. First Edition relesed at August 01.2018"
                android:textSize="12dp"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>